{
  "version": 2,
  "builds": [
    {
      "src": "*.{css,js,png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot,html,xml,txt}",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|html|xml|txt))$",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "redirects": [
    {
      "source": "https://www.lugvia.com/(.*)",
      "destination": "https://lugvia.com/$1",
      "permanent": true
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}