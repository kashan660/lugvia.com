# Environment Configuration Example
# Copy this file to .env and add your actual values

# Database Configuration
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# Admin Authentication
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_hashed_admin_password
JWT_SECRET=your_jwt_secret_key_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
GOOGLE_ANALYTICS_ID=your_google_analytics_id
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Email Configuration (SMTP)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Server Configuration
PORT=3000
NODE_ENV=production

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ADMIN_RATE_LIMIT_MAX=50
SESSION_TIMEOUT_MS=28800000
ADMIN_SESSION_TIMEOUT=8h
BCRYPT_ROUNDS=12
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Generate secure passwords using: node generate-admin-password.js
# 4. Never commit .env file to version control
# 5. For production, set NODE_ENV=production